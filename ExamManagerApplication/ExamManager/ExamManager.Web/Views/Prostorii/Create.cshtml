@model ExamManager.Domain.DomainModel.Prostorija

@{
    ViewData["Title"] = "Додај нова просторија";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #F0F8FF; height:100%">
    <div class="container pt-5 h-100 pb-5">

        <h1>Додај нова просторија</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Име</label>
                        <input asp-for="Ime" class="form-control" />
                        <span asp-validation-for="Ime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Капацитет</label>
                        <input asp-for="Kapacitet" class="form-control">
                        <span asp-validation-for="Kapacitet" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Додај" class="btn btn-lg text-white mt-2" style="background-color: #523a24" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index"><i class="fa-solid fa-arrow-left fa-xl text-dark"> Назад кон листата на простории</i></a>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
