@model ExamManager.Domain.DomainModel.Prostorija

@{
    ViewData["Title"] = "Детали";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="background-color: #F0F8FF">
    <div class="container pt-5 pb-5">
        <h1>Детали</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <label>Просторија</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ime)
                </dd>
                <dt class="col-sm-2">
                    <label>Капацитет</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Kapacitet)
                </dd>
            </dl>
        </div>
        <div class="pt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa-solid fa-pen-to-square fa-xl pr-3 text-dark"> Измени</i></a>
            <br />
            <br />
            <a asp-action="Index"><i class="fa-solid fa-arrow-left fa-xl text-dark"> Назад кон листата на простории</i></a>
        </div>
    </div>

</div>

