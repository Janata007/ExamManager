@model ExamManager.Domain.DomainModel.Predmet

@{
    ViewData["Title"] = "Додај нов предмет";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #F0F8FF; height:100%" >
    <div class="container pt-5 h-100 pb-5">

        <h1>Додај нов предмет</h1>


        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Предмет</label>
                        @*<label asp-for="ImeNaPredmet" class="control-label"></label>*@
                        <input asp-for="ImeNaPredmet" class="form-control" />
                        <span asp-validation-for="ImeNaPredmet" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Код на предмет</label>
                        <input asp-for="KodNaPredmet" class="form-control" />
                        <span asp-validation-for="KodNaPredmet" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Семестар</label>
                        @*<label asp-for="Semestar" class="control-label"></label>*@
                        <select asp-for="Semestar" class="form-control" asp-items="ViewBag.Semestar"></select>
                        <span asp-validation-for="Semestar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Студиски циклус</label>
                        @*<label asp-for="StudiskiCiklusId" class="control-label"></label>*@
                        <select asp-for="StudiskiCiklusId" class="form-control" asp-items="ViewBag.StudiskiCiklusId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Додај" class="btn btn-lg text-white mt-2" style="background-color: #523a24" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index"><i class="fa-solid fa-arrow-left fa-xl text-dark"> Назад кон листата на предмети</i></a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}