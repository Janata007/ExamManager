@model ExamManager.Domain.DomainModel.Sproveduvac

@{
    ViewData["Title"] = "Додај нов спроведувач";
}

<div style="background-color: #F0F8FF; height:100%">
    <div class="container pt-5 h-100 pb-5">

<h1>Додај нов спроведувач</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Име и презиме</label>
                <input asp-for="ImePrezime" class="form-control" />
                <span asp-validation-for="ImePrezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додај" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa-solid fa-arrow-left fa-xl text-dark">Назад кон листата на спроведувачи</i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
