@model ExamManager.Domain.DomainModel.Student

@{
    ViewData["Title"] = "Додај нов student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Додај нов студент</h1>

@*<h4>Predmet</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Име и презиме</label>
                @*<label asp-for="Semestar" class="control-label"></label>*@
                <input asp-for="ImePrezime" class="form-control"/>
                <span asp-validation-for="ImePrezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додај" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад кон листа на студенти</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}