@model ExamManager.Domain.DomainModel.Student

@{
    ViewData["Title"] = "Измени student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Измени student</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BrojNaIndeks" />
            <div class="form-group">
                <label class="control-label">Индекс</label>
                @*<label asp-for="ImeNaPredmet" class="control-label"></label>*@
                <input asp-for="BrojNaIndeks" class="form-control" readonly/>
                <span asp-validation-for="BrojNaIndeks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Име и презиме</label>
                @*<label asp-for="Semestar" class="control-label"></label>*@
                <input asp-for="ImePrezime" class="form-control"/>
                <span asp-validation-for="ImePrezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Термин</label>
                @*<label asp-for="StudiskiCiklusId" class="control-label"></label>*@
                <select asp-for="CustomTerminId" class="form-control" asp-items="ViewBag.CustomTermin"></select>
                <span asp-validation-for="CustomTerminId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад кон листа на студенти</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}