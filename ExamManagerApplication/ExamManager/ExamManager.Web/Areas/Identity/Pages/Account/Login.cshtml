@page
@model LoginModel

@{
    ViewData["Title"] = "Најави се";
}

<h1>@ViewData["Title"]</h1>
<div class = "center-screen">

        <div class="row">

                <form id="account" method="post">
                    <hr />
                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                    <div class="form-group">
                        <label>E-mail адреса</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Лозинка</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Input.RememberMe" />
                                Запомни ме
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Најави се</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Заборавена лозинка?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирај се како нов корисник</a>
                        </p>
                    </div>
                </form>
        </div>
        </div>
        <style>
            .center-screen {
                 position: absolute;
                 top: 50%;
                 left: 50%;
                 margin-right: -50%;
                 transform: translate(-50%, -50%);
               }
               h1 {
                   text-align: center;
                   color: #0c263d;
                   margin: 30px;
               }
        </style>
